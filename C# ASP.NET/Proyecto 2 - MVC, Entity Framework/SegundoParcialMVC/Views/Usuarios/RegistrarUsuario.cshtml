@model SegundoParcialMVC.Models.Usuario

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="https://code.angularjs.org/1.7.8/angular.min.js"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <title>RegistrarUsuario</title>
</head>
<body>
    @using (Html.BeginForm("RegistrarUsuario", "Usuarios"))
    {
        <div class="container col-md-4" style="margin-top: 5%;" data-ng-app>
            <form>
                <div class="form-group">
                    <h1 class="h3 mb-3 font-weight-normal text-left">Formulario de registro</h1>
                </div>
                <div class="form-group">
                    <label for="nombre" class="">Nombre para mostrar</label>
                    <input type="text" name="nombre" class="form-control" data-ng-model="nombre" required autofocus>
                    @if (ViewBag.nombreExiste != null){<label class="text-danger small">@ViewBag.nombreExiste</label>}
                </div>
                <div class="form-group">
                    <label for="email" class="">Dirección de email</label>
                    <input type="email" name="email" class="form-control" data-ng-model="email" required>
                    @if (ViewBag.emailExiste != null){<label class="text-danger small">@ViewBag.emailExiste</label>}
                </div>
                <div class="form-group">
                    <label for="clave" class="">Contraseña (debe tener 8 caracteres o más)</label>
                    <input type="password" name="clave" class="form-control" pattern=".{8,}" data-ng-model="clave" required>
                </div>
                <div class="form-group">
                    <label for="clave2" class="">Repita la contraseña</label>
                    <input type="password" name="clave2" class="form-control" data-ng-model="clave2" data-ng-pattern="clave" required>
                </div>
                <div>
                    <button type="submit" class="btn btn-block" data-ng-disabled="!(nombre && email && clave && clave2)" style="background-color: #CA7920; color: white; width: 40%;" type="submit">Registrarse</button>
                </div>
            </form>
        </div>
    }
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/bundles/angularjs")
    }
</body>
</html>
