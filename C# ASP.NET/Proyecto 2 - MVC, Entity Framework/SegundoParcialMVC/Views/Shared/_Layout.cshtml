<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body data-ng-app>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        @{
            if (Session["nombre"] != null)
            {
                @Html.ActionLink("Mueblería", "Index", "", new { @class = "navbar-brand" })
            }
            else
            {
                Html.RenderAction("Index", "Login");
            }
        }
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto"></ul>
            <label>Bienvenido/a, @Session["nombre"].ToString()</label>&nbsp;&nbsp;
            <form class="form-inline my-2 my-lg-0">
                @Html.ActionLink("Cerrar sesión", "CerrarSesion", "Login", new { area = "" }, new { @class = "btn btn-outline-danger my-2 my-sm-0" })
            </form>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>
    @Scripts.Render("~/bundles/angularjs")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
