@model IEnumerable<SegundoParcialMVC.Models.Compra>

@{
    ViewBag.Title = "Lista de compras realizadas";
}

<h2>Lista de compras realizadas</h2>

<table class="table">
    <tr>
        <th>
            Nombre del usuario
        </th>
        <th>
            Nombre del producto
        </th>
        <th>
            Monto
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombre_usuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombre_producto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.monto)
            </td>
        </tr>
    }
</table>

@Html.ActionLink("Volver al panel de productos", "Index", "Productos")
